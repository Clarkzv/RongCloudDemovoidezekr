<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="动态配置的会话列表"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAddMsgListener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加接收消息监听器" />

    <Button
        android:id="@+id/btnCancelMsgListener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消接收消息监听器" />
    <TextView
        android:layout_width="wrap_content"
        android:text="注意:正常使用时需要把添加监听器放到Application中"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee" />
</LinearLayout>
